<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% newListItems.forEach(function(items) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=items._id%>" onchange="this.form.submit()">
      <p><%=  items.name  %></p>
    </div>
    <input type="hidden" name="title" value="<%= listTitle %>">
  </form>

  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Task : Type Here" autocomplete="off" required autofocus>
    <button type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>
</div>

<%- include("footer") -%>
